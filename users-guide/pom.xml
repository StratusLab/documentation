<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>eu.stratuslab.documentation</groupId>
  <artifactId>users-guide</artifactId>
  <packaging>pom</packaging>
  <name>Users Guide</name>
  <description>Users Guide</description>

  <parent>
    <groupId>eu.stratuslab.documentation</groupId>
    <artifactId>docs</artifactId>
    <version>13.05-SNAPSHOT</version>
  </parent>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/${project.artifactId}-${project.version}</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/resources</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>

          <execution>
            <id>pandoc-html</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <workingDirectory>src/main/markdown</workingDirectory>
              <executable>pandoc</executable>
              <arguments>
                <argument>--write=html5</argument>
                <argument>--css=css/screen.css</argument>
                <argument>--standalone</argument>
                <argument>--toc</argument>
                <argument>--number-sections</argument>
                <argument>-o</argument>
                <argument>${basedir}/target/${project.artifactId}-${project.version}/index.html</argument>
                <argument>title.txt</argument>
                <argument>00-preface.md</argument>
                <argument>01-intro.md</argument>
                <argument>02-quick-start.md</argument>
                <argument>03-client-install.md</argument>
                <argument>04-web-interfaces.md</argument>
                <argument>05-vm-mgt.md</argument>
                <argument>06-storage-mgt.md</argument>
                <argument>07-image-mgt.md</argument>
                <argument>08-apis.md</argument>
              </arguments>
            </configuration>
          </execution>

          <execution>
            <id>pandoc-pdf</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <workingDirectory>src/main/markdown</workingDirectory>
              <executable>pandoc</executable>
              <arguments>
                <argument>--toc</argument>
                <argument>--number-sections</argument>
                <argument>-o</argument>
                <argument>${basedir}/target/${project.artifactId}-${project.version}.pdf</argument>
                <argument>title.txt</argument>
                <argument>00-preface.md</argument>
                <argument>01-intro.md</argument>
                <argument>02-quick-start.md</argument>
                <argument>03-client-install.md</argument>
                <argument>04-web-interfaces.md</argument>
                <argument>05-vm-mgt.md</argument>
                <argument>06-storage-mgt.md</argument>
                <argument>07-image-mgt.md</argument>
                <argument>08-apis.md</argument>
              </arguments>
            </configuration>
          </execution>

        </executions>

      </plugin>

    </plugins>

  </build>

</project>
